data = np.random.normal(loc=0, scale=1, size=1000) # Генерируем массив из 1000 случайных чисел с нормальным распределением

plt.figure(figsize=(10, 5)) # Построение гистограммы
plt.hist(data, bins=20, alpha=0.7, color='blue')  # Гистограмма с 20 столбцами

plt.title('Гистограмма нормального распределения')
plt.xlabel('Значения')
plt.ylabel('Частота')
plt.grid()
plt.show()  # Отображаем гистограмму
